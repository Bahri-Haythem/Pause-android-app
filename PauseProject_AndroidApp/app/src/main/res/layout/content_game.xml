<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gameImageView"
                android:layout_width="match_parent"
                android:layout_height="149dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewTitle"
                    style="@style/TextViewPurple"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="TextView"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRatin"
                    style="@style/TextViewPurpleSmall"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="PlayTime :" />

                <TextView
                    android:id="@+id/textViewPlayTime"
                    style="@style/TextViewGreySmall"
                    android:layout_width="282dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="5 h"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRatin2"
                    style="@style/TextViewPurpleSmall"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Rating :" />

                <TextView
                    android:id="@+id/textViewRating"
                    style="@style/TextViewGreySmall"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewRatin4"
                    style="@style/TextViewPurpleSmall"
                    android:layout_width="167dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Release Date :" />

                <TextView
                    android:id="@+id/textViewReleaseDate"
                    style="@style/TextViewGreySmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5/5/5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewGenre"
                style="@style/TextViewPurpleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Genre :"
                android:textSize="18sp"
                android:textStyle="bold" />

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/Genre_group"
                style="@style/TagGroup"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:atg_borderColor="@color/purple_500"
                app:atg_borderStrokeWidth="2dp"
                app:atg_checkedBackgroundColor="@color/purple_500"
                app:atg_checkedBorderColor="@color/purple_500"
                app:atg_textColor="@color/purple_500"
                app:atg_textSize="16sp" >

            </me.gujun.android.taggroup.TagGroup>

            <TextView
                android:id="@+id/textViewPlatform"
                style="@style/TextViewPurpleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Platforms :"
                android:textSize="18sp"
                android:textStyle="bold" />

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/platform_group"
                style="@style/TagGroup"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:atg_borderColor="@color/purple_500"
                app:atg_borderStrokeWidth="2dp"
                app:atg_checkedBackgroundColor="@color/purple_500"
                app:atg_checkedBorderColor="@color/purple_500"
                app:atg_textColor="@color/purple_500"
                app:atg_textSize="16sp" />

            <TextView
                android:id="@+id/textView"
                style="@style/TextViewPurpleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Tags :" />

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/tag_group"
                style="@style/TagGroup"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:atg_borderColor="@color/purple_500"
                app:atg_borderStrokeWidth="2dp"
                app:atg_checkedBackgroundColor="@color/purple_500"
                app:atg_checkedBorderColor="@color/purple_500"
                app:atg_textColor="@color/purple_500"
                app:atg_textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>